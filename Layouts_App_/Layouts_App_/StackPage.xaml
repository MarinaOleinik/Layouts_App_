<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layouts_App_.StackPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label x:Name="lbl" 
                   Text="Nupp!"
                   FontSize="Large"
                VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand"
                   />
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btn" 
                    Text="Vajuta siia" 
                    BackgroundColor="#55CF2F" 
                    BorderColor="#D00F0F"
                    BorderWidth="7"
                    FontSize="Large"
                    Clicked="btn_Clicked"
                    HorizontalOptions="Start">
                </Button>
                <Button x:Name="btn2" 
                    Text="0" 
                    BackgroundColor="#50502F" 
                    BorderColor="#D00F0F"
                    BorderWidth="7"
                    FontSize="Large"
                    Clicked="btn2_Clicked"
                    HorizontalOptions="EndAndExpand">
                </Button>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>